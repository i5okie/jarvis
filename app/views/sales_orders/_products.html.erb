<h1>Products</h1>

<table class="table hover-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Serial Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchased_items.each do |pi| %>
      <tr>
        <td><%= pi.item.name %></td>
        <td><%= pi.serial_number %></td>
        <td><%= link_to 'Show', pi %></td>
        <td><%= link_to 'Edit', edit_purchased_item_path(pi) %></td>
        <td><%= link_to 'Destroy', pi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
