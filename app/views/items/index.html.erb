<div class="row">
    <div class="col s12">
        <p id="notice"><%= notice %></p>

        <h1>Items</h1>
        
    </div>
    
    <div class="row">
      <div class="col s12">
        
      </div>
    </div>

<div class="row">
    <div class="col s12">
      <table id="items" class="highlight centered bordered" data-source="<%= items_url(format: "json") %>">
          <thead>
              <tr class="cyan lighten-3">
                  <th>Manufacturer</th>
                  <th>Name</th>
                  <th>Model Number</th>
                  <th>Shipping Dimensions</th>
                  <th>Weight</th>
                  <th colspan="3"></th>
              </tr>
          </thead>

          <tbody>
              <% @items.each do |item| %>
              <tr>
                  <td><%= item.manufacturer %></td>
                  <td><%= item.name %></td>
                  <td><%= item.model %></td>
                  <td><%= item.height %>
                      x
                      <%= item.width %>
                      x
                      <%= item.length %></td>

                  <td>
                      <a href="#" title="<%= " #{weight_lbs(item.weight)} | #{weight_kg(item.weight)}" %>"><%= item.weight %></a>
                  </td>
                  <td><%= link_to 'Show', item %></td>
                  <td><%= link_to 'Edit', edit_item_path(item) %></td>
                  <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
          </tbody>
      </table>
      <br>

      <a href="<%= new_item_path %>" class="modal-trigger btn-floating btn waves-effect waves-light green accent-3 "><i class="material-icons">add</i></a>
      
    </div>
    </div>
</div>
