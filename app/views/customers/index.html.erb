<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table class="highlight bordered compact">
  <thead>
    <tr class="cyan lighten-3">
      <th>Name</th>
      <th>Phone number</th>
      <th>Fax number</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr height="10px">
        <td><span class="table-item"><%= link_to customer.name.upcase, customer %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.fax_number %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

