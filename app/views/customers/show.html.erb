<p id="notice">
  <%= notice %>
</p>

<div class="row">
  <div class="col s12 m12">
    <div class="card grey lighten-4">
      <div class="card-content">
        <span class="cust_title"><%= @customer.name.upcase %></span>
        <div class="row">
          <div class="col s12 m6">
            <h4>Contacts:</h4>
            <% @customer.contacts.each do |contact| %>
              <%= render 'contact', contact: contact %>
                <% end %>
          </div>
          <div class="col s12 m6">
            <h4>Addresses</h4>
            <% @customer.shipping_addresses.each do |adr| %>
              <p>
                <%= render 'address', address: adr %>
              </p>
              <% end %>
          </div>
        </div>
      </div>
      <div class="card-content">
        <h3>Orders</h3>
	<% if @customer.sales_orders.count < 1 %>
          <span class="inset-text" style="padding-left: 10px;">no sales orders</span>
        <% else %>
          <p>number of orders: <%= @customer.sales_orders.count %></p>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to 'Back', customers_path %>
          <%= link_to 'Edit', edit_customer_path(@customer) %>
      </div>
    </div>
  </div>
</div>
